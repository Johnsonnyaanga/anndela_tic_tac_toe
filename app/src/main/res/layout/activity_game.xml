<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/dialogue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center_horizontal"
        android:text="Click any button to start the Game"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="25sp"
        android:textStyle="italic" />

    <!-- This layout sets the board of the game-->
    <!--Relative layout sets stage for the two players note as contender 1 and 2 and the reset button-->

    <!--the table layout for the game board-->

